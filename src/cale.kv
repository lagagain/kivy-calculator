#:kivy 1.0

BoxLayout:
    orientation:'vertical'
    #padding:[3,3,3,3]
    spacing:3
    number:0

    Label:
        id:monitor
        text: ""

    BoxLayout:
        GridLayout:
            cols:3
            Button:
                text:"1"
                on_release: monitor.text += self.text
            Button:
                text:"2"
                on_release: monitor.text += self.text
            Button:
                text:"3"
                on_release: monitor.text += self.text
            Button:
                text:"4"
                on_release: monitor.text += self.text
            Button:
                text:"5"
                on_release: monitor.text += self.text
            Button:
                text:"6"
                on_release: monitor.text += self.text
            Button:
                text:"7"
                on_release: monitor.text += self.text
            Button:
                text:"8"
                on_release: monitor.text += self.text
            Button:
                text:"9"
                on_release: monitor.text += self.text
            Button:
                text:"0"
                on_release: monitor.text += self.text
        BoxLayout:
            orientation:'vertical'
            Button:
                text: '+'
                on_release: monitor.text += self.text
            Button:
                text: '-'
                on_release: monitor.text += self.text
            Button:
                text: '*'
                on_release: monitor.text += self.text
            Button:
                text: '/'
                on_release: monitor.text += self.text
            Button:
                text: '='
                on_release:
                    monitor.text = str(eval(monitor.text))
